model Grd {
  id Int @id @default(autoincrement())
  codigo String @unique
  descripcion String?
  peso Decimal? @db.Decimal(10, 4)
  precioBaseTramo Decimal? @db.Decimal(14, 2)
  puntoCorteInf Decimal?
  puntoCorteSup Decimal?
  // ========== CAMPOS NUEVOS PARA PERCENTILES ==========
  percentil25 Decimal? @db.Decimal(10, 2)  // Percentil 25 (días)
  percentil50 Decimal? @db.Decimal(10, 2)  // Percentil 50 (días) - CRÍTICO para cálculo de outlier
  percentil75 Decimal? @db.Decimal(10, 2)  // Percentil 75 (días)
  // ====================================================
  createdAt DateTime @default(now())
  episodios Episodio[]
}

